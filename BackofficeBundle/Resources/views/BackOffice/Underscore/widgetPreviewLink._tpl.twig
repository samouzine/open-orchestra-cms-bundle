<div class="widget-toolbar">
    <div class="btn-group">
        <button class="btn dropdown-toggle btn-xs txt-color-white bg-color-blue" data-toggle="dropdown">
            <i class="fa fa-eye"></i>
            {{ 'open_orchestra_backoffice.node.preview'|trans({}, 'messages', language) }}
            <i class="fa fa-caret-down"></i>
        </button>
        <ul class="dropdown-menu pull-right">
            <% _.each(previewLinks, function(previewLink) { %>
            <li>
                <a href="<%= previewLink.link %>" target="_blank">
                    <%= previewLink.name %>
                </a>
            </li>
            <% }); %>
        </ul>
    </div>
</div>
